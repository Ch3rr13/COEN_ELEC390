<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.dashboard">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inventorySummaryCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-114dp"
        tools:layout_editor_absoluteY="359dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="-11dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="72dp"
                android:text="@string/Inventory_summary"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewItemsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Items"
                android:textSize="17dp"
                app:layout_constraintEnd_toStartOf="@+id/textViewGroupsLabel"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <TextView
                android:id="@+id/textViewGroupsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:textSize="17dp"
                app:layout_constraintEnd_toStartOf="@+id/textViewTotalQuantityLabel"
                app:layout_constraintStart_toEndOf="@id/textViewItemsLabel"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <TextView
                android:id="@+id/textViewTotalQuantityLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total Quantity"
                android:textSize="17dp"
                app:layout_constraintEnd_toStartOf="@+id/textViewTotalValue"
                app:layout_constraintStart_toEndOf="@id/textViewGroupsLabel"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <TextView
                android:id="@+id/textViewTotalValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total Value"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewTotalQuantityLabel"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <TextView
                android:id="@+id/textViewItemsValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@id/textViewItemsLabel"
                app:layout_constraintTop_toBottomOf="@id/textViewItemsLabel" />

            <TextView
                android:id="@+id/textViewGroupsValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@id/textViewGroupsLabel"
                app:layout_constraintTop_toBottomOf="@id/textViewGroupsLabel" />

            <TextView
                android:id="@+id/textViewTotalQuantityValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="98 units"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@id/textViewTotalQuantityLabel"
                app:layout_constraintTop_toBottomOf="@id/textViewTotalQuantityLabel" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="-80dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="198dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_row="1"
                    android:layout_column="0"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView1.1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Categories"
                            android:layout_gravity="top|left"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textView2.1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View all stock items that are low inventory"
                            android:textSize="24sp"
                            android:textStyle="italic"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_row="1"
                    android:layout_column="1"

                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/textView1.2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Group"
                            android:layout_gravity="top|left"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textView2.2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View all stock items that are low inventory"
                            android:textSize="24sp"
                            android:textStyle="italic"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"

                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/textView1.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Item"
                            android:layout_gravity="top|left"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textView2.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View all stock items that are low inventory"
                            android:textSize="24sp"
                            android:textStyle="italic"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"

                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/testView1.4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low Stock"
                            android:layout_gravity="top|left"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textView2.4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View all stock items that are low inventory"
                            android:textSize="24sp"
                            android:textStyle="italic"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textViewRecentChangesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="Recent Changes"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="italic" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
