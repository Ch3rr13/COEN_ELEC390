<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.coenelec390.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_items"
        android:name="com.example.coenelec390.ui.item.ComponentDetailFragment"
        android:label="@string/title_items"
        tools:layout="@layout/fragment_component_detail" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.coenelec390.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.coenelec390.ui.search.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search_view" />

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.example.coenelec390.ui.categories.CategoryFragment"
        android:label="@string/menu_categories"
        tools:layout="@layout/fragment_category_list" >
        <action
            android:id="@+id/action_navigation_categories_to_subCategoryFragment"
            app:destination="@id/subCategoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/subCategoryFragment"
        android:name="com.example.coenelec390.ui.categories.SubCategoryFragment"
        android:label="@string/subcategories" >
        <action
            android:id="@+id/action_subCategoryFragment_to_navigation_items"
            app:destination="@id/navigation_items" />
    </fragment>
</navigation>