<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="8dp"
    tools:context=".ui.item.AddItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5FEFEFE"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tvNFCtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="0dp"
            android:background="#F9F9F9"
            android:padding="8dp"
            android:text="SCAN NFC TAG"
            android:textAlignment="center"
            android:textColor="#E17F7F7F"
            android:textSize="24sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FEF2F2"
            android:gravity="start|left"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:background="#00987E7E"
                android:src="@drawable/baseline_folder_24" />

            <EditText
                android:id="@+id/etID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="12dp"
                android:background="@android:color/transparent"
                android:hint="Enter part Name"
                android:padding="1dp"
                android:textSize="32sp"
                tools:textFontWeight="800" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:padding="0dp"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            tools:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="191dp"
                    android:layout_height="62dp"
                    android:background="#00FFFFFF"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginLeft="13dp"
                        android:background="#00987E7E"
                        android:src="@drawable/baseline_edit_location_24" />

                    <EditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:background="@android:color/transparent"
                        android:hint="Location"
                        android:padding="12dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:padding="0dp">

                    <ImageButton
                        android:id="@+id/imageUnitPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginLeft="9dp"
                        android:background="#00987E7E"
                        android:src="@drawable/baseline_attach_money_24" />

                    <EditText
                        android:id="@+id/etUnitPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@android:color/transparent"
                        android:hint="Unit Price"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


            <com.google.android.material.tabs.TabItem
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#6FC4C4C4"
                android:right="2dp" />


            <LinearLayout
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp">

                    <ImageButton
                        android:id="@+id/imageQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginLeft="13dp"
                        android:background="#00987E7E"
                        android:src="@drawable/baseline_format_list_numbered_24" />

                    <EditText
                        android:id="@+id/etStock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:background="#00FFFFFF"
                        android:gravity="left|center_vertical"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="1dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp">

                    <ImageButton
                        android:id="@+id/imageTotalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginLeft="13dp"
                        android:background="#00987E7E"
                        android:src="@drawable/baseline_attach_money_24" />

                    <TextView
                        android:id="@+id/etTotalValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#FDFDFD"
                        android:padding="12dp"
                        android:text="Total Value"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/categoryLabel"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:gravity="center|center_horizontal|left"
                android:hint="Category"
                android:padding="12dp"
                android:textFontWeight="800"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginBottom="16dp"
                android:background="#D3434343"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <Spinner
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="#00AC2B2B"
                    android:padding="12dp"
                    android:textColor="#000000"
                    tools:background="#00E4EBF5" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subCategoryLabel"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:gravity="center|center_horizontal|left"
                android:hint="Subcategory"
                android:padding="12dp"
                android:textFontWeight="800"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginBottom="16dp"
                android:background="#D3434343"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <Spinner
                    android:id="@+id/subcategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="#00AC2B2B"
                    android:padding="12dp"
                    android:textColor="#000000"
                    tools:background="#00E4EBF5" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:gravity="center|center_horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="4dp"
                    android:layout_toStartOf="@+id/btnAddCharacteristic"
                    android:src="@drawable/baseline_add_24_pink" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddCharacteristic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="0dp"
                    android:background="#FFFFFF"
                    android:text="Add Field  "
                    android:textColor="#F83758"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:background="#1099EE"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Add Component "
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>